{
  "include": ["src", "index.js"],
  "ignore": ["node_modules", "template"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true
  }
}
